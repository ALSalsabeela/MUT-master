<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

     >

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:background="@drawable/man"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/list_image"
        android:layout_alignTop="@id/list_image"
        android:background="@drawable/ic_delete_forever_black_24dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/list_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_image"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:background="@color/graylevel1"
        android:gravity="center"
        android:padding="12dp"
        android:text="TextView" />

    <Button
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@id/list_image"
        android:layout_alignTop="@id/list_image"
        android:background="@drawable/ic_favorite_white_36dp"
        android:focusable="false" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        />
    
</RelativeLayout>
